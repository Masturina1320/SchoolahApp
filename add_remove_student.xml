<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#5F126C"
        android:fontFamily="@font/amaranth"
        android:padding="10dp"
        android:text="Add or Remove Student"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ListView
        android:id="@+id/listpelajar"
        android:layout_width="338dp"
        android:layout_height="374dp"
        android:layout_marginTop="13dp"
        android:background="#28A1045A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.0">

    </ListView>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="338dp"
        android:layout_height="186dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224">

        <Spinner
            android:id="@+id/myspinner"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <EditText
            android:id="@+id/namaPelajar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/roundwhite"
            android:ems="10"
            android:hint="Enter Name..."
            android:inputType="textPersonName"
            android:padding="10dp" />

        <Spinner
            android:id="@+id/kelaskoku"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:entries="@array/Cocurriculum" />

        <Button
            android:id="@+id/addpelajar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonadmin"
            android:text="ADD"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>